{
  "name": "harvest-notifier",
  "version": "1.0.0",
  "description": "An integration between Harvest and Slack that automatically reminds users who forget to mark their working hours in Harvest",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "node app.js",
    "daily": "node daily.js",
    "weekly": "node weekly.js",
    "monthly": "node monthly.js",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "jsdoc -c jsdoc.json && npx http-server docs -p 8080 -o"
  },
  "keywords": [
    "harvest",
    "slack",
    "timesheet",
    "notifications",
    "automation",
    "api",
    "integration"
  ],
  "author": "tiaan.swart@sleeq.global",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.1",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^4.0.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tiaanswart/harvest-notifier.git"
  },
  "bugs": {
    "url": "https://github.com/tiaanswart/harvest-notifier/issues"
  },
  "homepage": "https://github.com/tiaanswart/harvest-notifier#readme"
}